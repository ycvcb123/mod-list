.content {
    /* margin-top: 30rpx; */
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    /* border-top: solid 2rpx #e5e5e5; */
    border-bottom: solid 2rpx #e5e5e5;
}

.content .label {
    position: relative;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #9b9ba1;
    margin: 24rpx 0rpx 0rpx 40rpx;
    z-index: 12;
}

.list {
    margin: 0 auto;
    width: 100%;
    margin-top: -12rpx;
    /* width: 670rpx; */
}

.list .item {
    position: relative;
}

.list .item .container-info {
    position: relative;
    background: #fff;
    padding: 0rpx 40rpx;
    z-index: 11;
    height: 156rpx;
}

.list .item .location {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #38383c;
    margin-bottom: 8rpx;
    padding-top: 36rpx;
}

.list .item .address {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #9b9ba1;
    padding-left: 2rpx;
    /* 超出部分涉略号标示 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.list .item .address .icon {
    width: 20rpx;
    height: 24rpx;
}

.bottom-line {
    position: relative;
    margin: 0 auto;
    height: 2rpx;
    width: 670rpx;
    background: #e5e5e5;
    z-index: 2;
}


/* 菜单功能 */

.msg-menu {
    position: absolute;
    width: 100%;
    height: 156rpx;
    line-height: 156rpx;
    top: 0;
    z-index: 1;
}

.menu-delete {
    position: absolute;
    width: 150rpx;
    top: 0rpx;
    right: 0;
    background-color: rgb(255, 58, 50);
    color: #FFF;
    text-align: center;
}

.menu-mark {
    position: absolute;
    width: 150rpx;
    top: 0rpx;
    right: 150rpx;
    background-color: rgb(200, 199, 205);
    color: #FFF;
    text-align: center;
}

.container-item {
    padding-left: 20rpx;
    background: #fff;
    position: absolute;
    z-index: 100;
    width: 100%;
    height: 124rpx;
    border-bottom: 1rpx solid #E5E5E5;
}

.dsn {
    display: none;
}